@model aegis.Models.userrole

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Details</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Details userrole</h5>
                </div>
                <div class="ibox-content">


                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.rolename)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.rolename)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.roledescription)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.roledescription)
                        </dd>

                    </dl>


                    @Html.ActionLink("Edit", "Edit", new { id = Model.userroleId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-white" })

                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of users</h5>
                </div>
                <div class="ibox-content">

                    <table id="table-master" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    email
                                </th>
                            </tr>
                        <thead>
                        <tbody>
                            @foreach (var item in Model.userrolelines)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                </tr>
                            }
                        <tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>













